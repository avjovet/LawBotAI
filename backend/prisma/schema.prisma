generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id           Int       @id @default(autoincrement())
  email        String    @unique
  nombre       String?
  passwordHash String
  chats        Chat[]    @relation("UsuarioChats")
}

model Chat {
  id         Int       @id @default(autoincrement())
  usuario    Usuario   @relation("UsuarioChats", fields: [usuarioId], references: [id])
  usuarioId  Int
  mensajes   Mensaje[]
  fecha      DateTime  @default(now())

  // Campo opcional para guardar el nombre del perfil usado desde el JSON
  perfilBot  String?   // Ej: "abogado", "juez", etc. (clave del JSON est√°tico)
}

model Mensaje {
  id        Int      @id @default(autoincrement())
  chat      Chat     @relation(fields: [chatId], references: [id], onDelete: Cascade)
  chatId    Int
  rol       String   // 'user' o 'assistant'
  contenido String
  timestamp DateTime @default(now())
}



